{
  "extends": [
    "standard",
    "plugin:flowtype/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/flowtype",
    "prettier/react",
    "prettier/standard"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "plugins": ["flowtype", "react", "prettier", "standard"],
  "rules": {
    "prettier/prettier": "error",
    "semi": ["error", "never"]
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
